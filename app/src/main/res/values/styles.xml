<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AB" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:icon">@mipmap/ic_launcher</item>
        <item name="android:titleTextStyle">@style/TitleTextStyle</item>
        <item name="android:background">@drawable/ab_background</item>
        <item name="android:backgroundStacked">#222</item>
        <item name="android:backgroundSplit">#222</item>
        <!-- Support library compatibility -->
        <item name="icon">@mipmap/ic_launcher</item>
        <item name="titleTextStyle">@style/TitleTextStyle</item>
        <item name="background">@drawable/ab_background</item>
        <item name="backgroundStacked">#222</item>
        <item name="backgroundSplit">#222</item>
    </style>

    <!-- action bar title text -->
    <style name="TitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/actionbar_text</item>
    </style>

    <!-- action bar tab text -->
    <style name="ABTabText" parent="@style/Widget.AppCompat.ActionBar.TabText">
        <item name="android:textColor">@color/actionbar_text</item>
    </style>

    <style name="TextViewSpinnerItem" parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ABTab" parent="@style/Widget.AppCompat.ActionBar.TabView">

        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="header">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="splashStatus" parent="header">
        <item name="android:textColor">@color/splashText</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:padding">20dip</item>
    </style>

    <style name="li">
        <item name="android:padding">10dip</item>
        <item name="background">@color/dgray</item>
    </style>

    <style name="perfbutton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">10dip</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="question">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">7dip</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="sp_answer">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">7dip</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="syncText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="h1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000</item>
        <item name="android:shadowColor">#77FFFFFF</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="h2" parent="h1">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#444</item>
        <item name="android:shadowColor">#77FFFFFF</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="h1.light">
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="h2.light">
        <item name="android:textColor">#CCC</item>
    </style>

    <style name="title">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">30sp</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:padding">10dip</item>
    </style>

    <style name="LoadingAnim" parent="@android:style/Widget.ProgressBar.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:indeterminate">true</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="splashSkipBtn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="routeBullet">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:width">20dp</item>
        <item name="android:height">20dp</item>
    </style>

    <style name="routeIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="et">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="searchEt" parent="et">
        <item name="android:drawableLeft">@android:drawable/ic_menu_search</item>
        <item name="android:hint">Begin typing...</item>
    </style>

    <style name="wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="skip">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">20dp</item>
    </style>

    <style name="warning">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">#AAA</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:shadowColor">#000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="p">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="empty">
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">15dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#CCC</item>
    </style>

    <style name="redBtn" parent="@android:style/Widget.Button.Small">
        <item name="android:background">#DD0000</item>
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="Btn">
        <item name="android:textColor">@color/white</item>
        <!--<item name="android:background">@drawable/custom_btn</item>-->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="DTP">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin</item>
    </style>

    <style name="DTP.Label">
        <item name="android:textSize">@dimen/text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="DTP.Button">
        <item name="android:onClick">onClick</item>
    </style>
</resources>